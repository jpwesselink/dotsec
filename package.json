{
  "name": "dotsec-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "./packages/**"
  ],
  "scripts": {
    "build": "lerna run build",
    "postinstall": "lerna bootstrap",
    "prepare": "husky install",
    "packages/dotsec": "lerna exec --scope dotsec -- yarn",
    "dotsec/plugin-aws": "lerna exec --scope @dotsec/plugin-aws -- yarn",
    "docs": "typedoc --out ./docs/api --readme none --gitRevision $(git rev-parse --abbrev-ref HEAD) --entryPointStrategy Packages packages/dotsec"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.1",
    "@types/node": "*",
    "esbuild": "*",
    "esbuild-runner": "^2.2.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "rome": "^11.0.0",
    "turbo": "^1.6.3",
    "typedoc": "^0.23.21",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.5.5"
  }
}
