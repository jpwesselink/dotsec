{
    "compilerOptions": {
        "lib": [
            "es2020",
            "dom"
        ],
        "removeComments": true,
        "moduleResolution": "nodenext",
        "module": "ES2022",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "declaration": false,
        "listFiles": false,
        "importHelpers": true,
        "watch": true,
        "rootDir": "./",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@dotsec/*": [
                "./packages/*/"
            ],
            "dotsec": [
                "./packages/dotsec/"
            ],
        },
        "types": [
            "vitest/importMeta"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}
